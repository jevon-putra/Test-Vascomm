<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestVascoom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>>
        <item name="backgroundColor">@color/white</item>>
        <item name="android:statusBarColor" >@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestVascoom" parent="Base.Theme.TestVascoom" />

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_white_rounded</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTheme" parent="Base.Theme.TestVascoom">
        <item name="fontFamily">@font/new_poppins_semi_bold</item>
        <item name="android:textColorSecondary">@color/color_primary</item>
    </style>
</resources>